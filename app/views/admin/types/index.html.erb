<h1>Listing types</h1>

<table>
  <tr>
    <th>Type Name</th>
    <th></th>
    <th></th>
  </tr>

<% @types.each do |type| %>
  <tr>
    <td><%= type.name %></td>
    <td><%= link_to "Show", "/admin/types/#{type.id}" %></td>
    <td><%= link_to 'Edit', edit_admin_type_path(type) %></td>
    <td><%= link_to 'Destroy',"/admin/types/#{type.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

