<%= form_for(@venue) do |f| %>
  <% if @venue.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@venue.errors.count, "error") %> prohibited
        this venue from being saved:</h2>
    <ul>
    <% @venue.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
 
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :address_one %><br />
    <%= f.text_field :address_one %>
  </div>
  <div class="field">
    <%= f.label :address_two %><br />
    <%= f.text_field :address_two %>
  </div>
  <div class="field">
    <%= f.label :address_three %><br />
    <%= f.text_field :address_three %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity %>
  </div>
  <div class="field">
    <%= hidden_field_tag "venue[type_ids][]", nil %>
    <% Type.all.each do |type| %>
    <%= f.label type.name %>
    <%= check_box_tag :type_ids, type.id,
                      @venue.types.include?(type),
                      :name => 'venue[type_ids][]'%>
    <% end %>
  </div>
  <div class="field">
    <%= hidden_field_tag "venue[amenity_ids][]", nil %>
    <% Amenity.all.each do |amenity| %>
    <%= f.label amenity.name %>
    <%= check_box_tag :amenity_ids, amenity.id,
                      @venue.amenities.include?(amenity),
                      :name => 'venue[amenity_ids][]'%>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>